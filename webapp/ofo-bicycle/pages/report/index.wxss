/* pages/report/index.wxss */
page{
  width: 100%;
  height: 100%
}
.choose .title{
  width: 30rem;
  height: 100%;
  position: relative;
  box-sizing: border-box;
  font-size: 25px;
  font-weight: 650;
  margin: 25px 0;
  float: left
}
.select .checkbox{
  border: 1px solid #ffffff
}
.action{
  width: 100%;
   margin: 50px 0;
}
.action image{
  width: 25px;
  height: 25px;
  float: left
}
.action .title{
  margin-left: 30px;
  font-size: 20px;
}
.action-photo{
  width: 80%;
  height: 140px;
  margin-left: 10%;
  border: 1px dashed black
}
.action-photo image{
  width: 100px;
  height: 100%;
  margin-left: 5px;
}
.submit input{
  position: relative;
  width: 100%;
  height: 50px;
  margin: 3px;
  background-color: #ffffff;
  border: 1px solid #000000
}
.submit button{
  width: 80%;
  background-color: yellow;
  border-radius: 5px;
}
