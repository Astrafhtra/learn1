<!--pages/billing/index.wxml-->
<view class='container'>
  <view class="number">
    <text>单车编号:{{number}}</text>
  </view>
  <view class="time">
    <view class="time-title">
      正在计费
    </view>
    <view class="time-content">
      {{hours}} : {{minutes}} : {{seconds}}
    </view>
  </view>
  <view class="endride">
    <button type="warn" bindtap='endride'>结束骑行</button>
    <button type="primary">回到首页</button>
  </view>
</view>